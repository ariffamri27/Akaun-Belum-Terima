@page "/kelulusan-pendapatan"
@using IMAS.API.Belanjawan.Shared.Models
@using IMAS.Blazor.Belanjawan.Services.Refit
@using IMAS.Blazor.Belanjawan.Services.Refit.Belanjawan
@using MudBlazor
@inject IPenyediaanPendapatanApi PenyediaanPendapatanService

@inject IDialogService DialogService

<MudPaper Class="pa-4">
    <MudText Typo="Typo.h5">Senarai Kelulusan Pendapatan</MudText>

    @if (_isLoading)
    {
        <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
    }
    else
    {
        <MudTable Items="_kelulusanPendapatanList" Hover="true">
            <HeaderContent>
                <MudTh>No Pendapatan</MudTh>
                <MudTh>Tarikh</MudTh>
                <MudTh>Kelulusan Oleh</MudTh>
                <MudTh>Status</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.NoPendapatan</MudTd>
                <MudTd>@context.Tarikh</MudTd>
                <MudTd>@context.Keterangan</MudTd>
                <MudTd>@context.</MudTd>
                <MudTd>
                    <MudButton Color="Color.Primary" Size="Size.Small" OnClick="@(() => EditKelulusanPendapatan(context))">Edit</MudButton>
                    <MudButton Color="Color.Error" Size="Size.Small" OnClick="@(() => DeleteKelulusanPendapatan(context.ID))">Hapus</MudButton>
                </MudTd>
            </RowTemplate>
        </MudTable>
    }

    <MudDivider Class="my-4" />

    <MudText Typo="Typo.h6">@(_isEdit ? "Kemaskini Kelulusan Pendapatan" : "Tambah Kelulusan Pendapatan")</MudText>
    <MudDatePicker Label="Tarikh Kelulusan" @bind-Value="_kelulusanPendapatanForm.Tarikh" />
    <MudTextField Label="Status" @bind-Value="_kelulusanPendapatanForm.StatusLulus" />
    <MudTextField Label="Keterangan" @bind-Value="_kelulusanPendapatanForm.Keterangan" />

    <MudSelect T="Guid" Label="Semakan Pendapatan" @bind-Value="_kelulusanPendapatanForm.ID">
        @foreach (var semakan in _semakanPendapatanList)
        {
            <MudSelectItem T="Guid?" Value="@(new Guid?(semakan.ID))">@semakan.ID</MudSelectItem>
        }
    </MudSelect>

    <MudButton Color="Color.Success" OnClick="SaveKelulusanPendapatan">Simpan</MudButton>
    <MudButton Color="Color.Default" OnClick="ResetForm">Batal</MudButton>
</MudPaper>

@code {
    private List<PenyediaanPendapatanDTO> _kelulusanPendapatanList = new();
    private PenyediaanPendapatanDTO _kelulusanPendapatanForm = new();
    private bool _isEdit = false;
    private bool _isLoading = false;
    private List<PenyediaanPendapatanDTO> _semakanPendapatanList = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadSemakanPendapatanData();
        await LoadData();
    }

    private async Task LoadData()
    {
        _isLoading = true;
        _kelulusanPendapatanList = await PenyediaanPendapatanService.GetAllAsync();
        _isLoading = false;
    }

    private async Task LoadSemakanPendapatanData()
    {
        // Load Semakan Pendapatan data
    }

    private void EditKelulusanPendapatan(PenyediaanPendapatanDTO k)
    {
        _kelulusanPendapatanForm = new PenyediaanPendapatanDTO
        {
            ID = k.ID,
            Tarikh = k.Tarikh,
            StatusLulus = k.StatusLulus,
            Keterangan = k.Keterangan
        };
        _isEdit = true;
    }

    private async Task SaveKelulusanPendapatan()
    {
        try
        {
            if (_isEdit)
            {
                await PenyediaanPendapatanService.UpdateAsync(_kelulusanPendapatanForm.ID, _kelulusanPendapatanForm);
            }
            else
            {
                await PenyediaanPendapatanService.CreateAsync(_kelulusanPendapatanForm);
            }

            await LoadData();
            ResetForm();
        }
        catch (Exception ex)
        {
            await DialogService.ShowMessageBox("Ralat", $"Gagal simpan rekod. {ex.Message}");
        }
    }

    private async Task DeleteKelulusanPendapatan(Guid id)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Pasti?",
            "Anda pasti mahu hapus rekod ini?",
            yesText: "Ya",
            cancelText: "Batal"
        );

        if (confirm == true)
        {
            var response = await PenyediaanPendapatanService.DeleteAsync(id);
            if (response.IsSuccessStatusCode)
            {
                await LoadData();
            }
            else
            {
                await DialogService.ShowMessageBox("Ralat", "Gagal menghapuskan rekod.");
            }
        }
    }

    private void ResetForm()
    {
        _kelulusanPendapatanForm = new();
        _isEdit = false;
    }
}

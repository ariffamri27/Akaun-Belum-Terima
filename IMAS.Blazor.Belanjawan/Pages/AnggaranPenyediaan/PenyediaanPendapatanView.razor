@page "/penyediaan-pendapatan"
@using IMAS.API.Belanjawan.Shared.Models
@using IMAS.Blazor.Belanjawan.Services.Refit
@using IMAS.Blazor.Belanjawan.Services.Refit.Belanjawan
@using MudBlazor
@inject IPenyediaanPendapatanApi PenyediaanPendapatanService
@inject IDialogService DialogService

<MudPaper Class="pa-4">
    <MudText Typo="Typo.h5">Senarai Penyediaan Pendapatan</MudText>

    @if (_isLoading)
    {
        <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
    }
    else
    {
        <MudTable Items="_penyediaanPendapatanList" Hover="true">
            <HeaderContent>
                <MudTh>No Pendapatan</MudTh>
                <MudTh>Tarikh</MudTh>
                <MudTh>Keterangan</MudTh>
                <MudTh>Status</MudTh>  <!-- Adding Status Column -->
                <MudTh>Dana ID</MudTh>
                <MudTh>Bahagian ID</MudTh>
                <MudTh>Unit ID</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.NoPendapatan</MudTd>
                <MudTd>@context.Tarikh</MudTd>
                <MudTd>@context.Keterangan</MudTd>
                <MudTd>@context.StatusSemak</MudTd> <!-- Displaying Status -->
                <MudTd>@context.DanaID</MudTd>
                <MudTd>@context.BahagianID</MudTd>
                <MudTd>@context.UnitID</MudTd>
                <MudTd>
                    <MudButton Color="Color.Primary" Size="Size.Small" OnClick="@(() => EditPenyediaanPendapatan(context))">Edit</MudButton>
                    <MudButton Color="Color.Error" Size="Size.Small" OnClick="@(() => DeletePenyediaanPendapatan(context.ID))">Hapus</MudButton>
                </MudTd>
            </RowTemplate>
        </MudTable>
    }

    <MudDivider Class="my-4" />

    <MudText Typo="Typo.h6">@(_isEdit ? "Kemaskini Penyediaan Pendapatan" : "Tambah Penyediaan Pendapatan")</MudText>
    <MudTextField Label="No Pendapatan" @bind-Value="_penyediaanPendapatanForm.NoPendapatan" />
    <MudDatePicker Label="Tarikh" @bind-Value="_penyediaanPendapatanForm.Tarikh" />
    <MudTextField Label="Keterangan" @bind-Value="_penyediaanPendapatanForm.Keterangan" />
    <MudTextField Label="Status" @bind-Value="_penyediaanPendapatanForm.StatusSemak" /> <!-- Adding Status input -->

    <MudSelect T="Guid" Label="Dana" @bind-Value="_penyediaanPendapatanForm.DanaID">
        @foreach (var dana in _danaList)
        {
            <MudSelectItem T="Guid" Value="@(dana.Id)">@dana.DanaName</MudSelectItem>

        }
    </MudSelect>


    <MudSelect T="Guid" Label="Bahagian" @bind-Value="_penyediaanPendapatanForm.BahagianID">
        @foreach (var bahagian in _bahagianList)
        {
            <MudSelectItem T="Guid" Value="@(bahagian.ID)">@bahagian.BahagianName</MudSelectItem>
        }
    </MudSelect>
    <MudSelect T="Guid" Label="Unit" @bind-Value="_penyediaanPendapatanForm.UnitID">
        @foreach (var unit in _unitList)
        {
            <MudSelectItem T="Guid" Value="@(unit.ID)">@unit.UnitName</MudSelectItem>
        }
    </MudSelect>

    <MudButton Color="Color.Success" OnClick="SavePenyediaanPendapatan">Simpan</MudButton>
    <MudButton Color="Color.Default" OnClick="ResetForm">Batal</MudButton>
</MudPaper>

@code {
    private List<PenyediaanPendapatanDTO> _penyediaanPendapatanList = new();
    private PenyediaanPendapatanDTO _penyediaanPendapatanForm = new();
    private bool _isEdit = false;
    private bool _isLoading = false;
    private List<DanaDTO> _danaList = new();
    private List<BahagianDTO> _bahagianList = new();
    private List<UnitDTO> _unitList = new();

    [Inject] public IDanaApi DanaService { get; set; }
    [Inject] public IBahagianApi BahagianService { get; set; }
    [Inject] public IUnitApi UnitService { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _danaList = await DanaService.GetAllAsync();
        _bahagianList = await BahagianService.GetAllAsync();
        _unitList = await UnitService.GetAllAsync();

        await LoadData();
    }

    private async Task LoadData()
    {
        _isLoading = true;
        _penyediaanPendapatanList = await PenyediaanPendapatanService.GetAllAsync();
        _isLoading = false;
    }

    private void EditPenyediaanPendapatan(PenyediaanPendapatanDTO p)
    {
        _penyediaanPendapatanForm = new PenyediaanPendapatanDTO
        {
            ID = p.ID,
            NoPendapatan = p.NoPendapatan,
            Tarikh = p.Tarikh,
            Keterangan = p.Keterangan,
            StatusSemak = p.StatusSemak, // including status
            DanaID = p.DanaID,
            BahagianID = p.BahagianID,
            UnitID = p.UnitID
        };
        _isEdit = true;
    }

    private async Task SavePenyediaanPendapatan()
    {
        try
        {
            if (_isEdit)
            {
                await PenyediaanPendapatanService.UpdateAsync(_penyediaanPendapatanForm.ID, _penyediaanPendapatanForm);
            }
            else
            {
                await PenyediaanPendapatanService.CreateAsync(_penyediaanPendapatanForm);
            }

            await LoadData();
            ResetForm();
        }
        catch (Exception ex)
        {
            await DialogService.ShowMessageBox("Ralat", $"Gagal simpan rekod. {ex.Message}");
        }
    }

    private async Task DeletePenyediaanPendapatan(Guid id)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Pasti?",
            "Anda pasti mahu hapus rekod ini?",
            yesText: "Ya",
            cancelText: "Batal"
        );

        if (confirm == true)
        {
            var response = await PenyediaanPendapatanService.DeleteAsync(id);
            if (response.IsSuccessStatusCode)
            {
                await LoadData();
            }
            else
            {
                await DialogService.ShowMessageBox("Ralat", "Gagal menghapuskan rekod.");
            }
        }
    }

    private void ResetForm()
    {
        _penyediaanPendapatanForm = new();
        _isEdit = false;
    }
}

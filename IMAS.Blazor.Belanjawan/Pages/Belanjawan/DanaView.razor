@page "/dana"
@using IMAS.API.Belanjawan.Shared.Models
@using IMAS.Blazor.Belanjawan.Services.Refit
@using IMAS.Blazor.Belanjawan.Services.Refit.Belanjawan
@using MudBlazor

@inject IDanaApi DanaService
@inject IDialogService DialogService

<MudPaper Class="pa-4">
    <MudText Typo="Typo.h5">Senarai Dana</MudText>

    @if (_isLoading)
    {
        <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
    }
    else
    {
        <MudTable Items="_danaList" Hover="true">
            <HeaderContent>
                <MudTh>Dana</MudTh>
                <MudTh>Keterangan</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.DanaName</MudTd>
                <MudTd>@context.Keterangan</MudTd>
                <MudTd>
                    <MudButton Color="Color.Primary" Size="Size.Small" OnClick="@(() => EditDana(context))">Edit</MudButton>
                    <MudButton Color="Color.Error" Size="Size.Small" OnClick="@(() => DeleteDana(context.Id))">Hapus</MudButton>
                </MudTd>
            </RowTemplate>
        </MudTable>
    }

    <MudDivider Class="my-4" />

    <MudText Typo="Typo.h6">@(_isEdit ? "Kemaskini Dana" : "Tambah Dana")</MudText>
    <MudTextField Label="Dana" @bind-Value="_danaForm.DanaName" />
    <MudTextField Label="Keterangan" @bind-Value="_danaForm.Keterangan" Lines="3" />

    <MudStack Row Spacing="2">
        <MudButton Color="Color.Success" OnClick="SaveDana">Simpan</MudButton>
        <MudButton Color="Color.Default" OnClick="ResetForm">Batal</MudButton>
    </MudStack>
</MudPaper>

@code {
    private List<DanaDTO> _danaList = new();
    private DanaDTO _danaForm = new();
    private bool _isEdit = false;
    private bool _isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _isLoading = true;
        _danaList = await DanaService.GetAllAsync();
        _isLoading = false;
    }

    private void EditDana(DanaDTO dana)
    {
        _danaForm = new DanaDTO
        {
            Id = dana.Id,
            DanaName = dana.DanaName,
            Keterangan = dana.Keterangan
        };
        _isEdit = true;
    }

    private async Task SaveDana()
    {
        try
        {
            if (_isEdit)
            {
                await DanaService.UpdateAsync(_danaForm.Id, _danaForm);
            }
            else
            {
                await DanaService.CreateAsync(_danaForm);
            }

            await LoadData();
            ResetForm();
        }
        catch (Exception ex)
        {
            await DialogService.ShowMessageBox("Ralat", $"Gagal simpan rekod. {ex.Message}");
        }
    }

    private async Task DeleteDana(Guid id)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Pasti?",
            "Anda pasti mahu hapus rekod ini?",
            yesText: "Ya",
            cancelText: "Batal"
        );

        if (confirm == true)
        {
            var response = await DanaService.DeleteAsync(id);
            if (response.IsSuccessStatusCode)
            {
                await LoadData();
            }
            else
            {
                await DialogService.ShowMessageBox("Ralat", "Gagal menghapuskan rekod.");
            }
        }
    }

    private void ResetForm()
    {
        _danaForm = new();
        _isEdit = false;
    }
}
